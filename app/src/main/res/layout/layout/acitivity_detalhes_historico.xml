<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    card_view:cardCornerRadius="10dp"
    card_view:cardElevation="10dp"
    card_view:cardUseCompatPadding="true">

    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryDark">


            <TextView
                android:id="@+id/historico_descricao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/fab_margin"
                android:text="@string/acitivity_history_details_desciption"
                android:textColor="#fff"
                android:textSize="22sp"/>

            <TextView
                android:id="@+id/historico_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="50dp"
                android:layout_marginTop="@dimen/fab_margin"
                android:layout_alignParentRight="true"
                android:text="@string/acitivity_history_details_date_hour"
                android:textColor="#fff"
                android:textSize="22sp"/>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/detalhes_historico_descricao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="ABERTO"
                android:layout_marginStart="30dp"
                android:layout_marginTop="@dimen/fab_margin"
                android:textColor="#000000"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/detalhes_historico_data"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:layout_marginStart="0dp"
                android:layout_marginTop="@dimen/fab_margin"
                android:text="31/05/2018 - 01:04:26"
                android:textColor="#000000"
                android:textSize="16sp"/>
        </LinearLayout>

    </LinearLayout>


</android.support.v7.widget.CardView>